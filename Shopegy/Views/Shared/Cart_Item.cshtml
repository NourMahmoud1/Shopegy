@* @model  *@
@* cart item *@
@model BLL.ViewModel.CartItemViewModel

<tr>
    <td class="align-middle"><img src="img/product-1.jpg" alt="" style="width: 50px;"> @Model.ProductName</td>
    <td class="align-middle">$@Model.Price</td>
    <td class="align-middle">
        <div class="input-group quantity mx-auto" style="width: 100px;">
            <div class="input-group-btn">
                <button class="btn btn-sm btn-primary btn-minus">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
            <input type="text" class="form-control form-control-sm bg-secondary border-0 text-center" value="@Model.Quantity">
            <div class="input-group-btn">
                <button class="btn btn-sm btn-primary btn-plus">
                    <i class="fa fa-plus"></i>
                </button>
            </div>
        </div>
    </td>
    <td class="align-middle">$@Model.TotalPrice</td>
    <td class="align-middle"><button class="btn btn-sm btn-danger"><i class="fa fa-times"></i></button></td>
</tr>